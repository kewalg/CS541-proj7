<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomListView">

    <ImageView
        android:id="@+id/image_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_foodname_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_lv"
        android:text="Food Name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_date_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_foodname_lv"
        android:text="Date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_cal_num_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_lv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="calories_num"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_cal_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cal_num_lv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="cal."
        android:textSize="15sp" />

</RelativeLayout>